<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:backgroundTint="@color/cardviewcolor"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:padding="@dimen/cardview_compat_inset_shadow"
        android:elevation="1dp"
        android:layout_margin="@dimen/cardview_compat_inset_shadow"
        card_view:cardCornerRadius="4dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_height="@dimen/list_item_height"
            android:minHeight="@dimen/list_item_height">
            <LinearLayout
                android:paddingTop="8dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/section_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/textcolor"
                        tools:text="Section Name"
                        android:paddingRight="4dp"
                        android:paddingEnd="4dp" />

                    <TextView
                        android:id="@+id/author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/textcolor"
                        android:textSize="12sp"
                        tools:text="Author" />
                </LinearLayout>
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="0dp"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@android:color/white"
                    android:textAppearance="?android:textAppearanceMedium"
                    tools:text="Title Of Article" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Published on : "
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/textcolor"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/datecolor"
                        android:textSize="12sp"
                        tools:text="26/11/1998" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textcolor"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:text=" - "/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceSmall"
                        android:textColor="@color/timecolor"
                        android:textSize="12sp"
                        tools:text="1:00 PM" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/initialName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">
                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/textcolor"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="12dp">
                </View>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circular_textview_drawable"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/fistName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="@color/white"
                        android:textSize="@dimen/Initials_size"
                        tools:text="S" />

                    <TextView
                        android:id="@+id/lastName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:textAppearanceLarge"
                        android:textColor="@color/white"
                        android:textSize="@dimen/Initials_size"
                        tools:text="J" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>